<div class="container">
  <h2 class="section__headline">In The News</h2>
  <h3 class="news__subhead">Recent Stories</h3>

  {% for story in news %}
    <h4 class="news__post"><span class="news__post-title">{{story.title}}</span> - {{story.get_preview(25)}}</h4>
  {% endfor %}

  <a class="section__cta-button section__cta-button--inverted" href="./news">See All News</a>
</div>
