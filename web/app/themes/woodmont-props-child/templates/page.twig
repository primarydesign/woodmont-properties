{% extends "base.twig" %}

{% block content %}

	<section class="section__slideshow">
		{% include "partials/slideshow.twig" %}
	</section>

	{% include "partials/sandbox.twig" %}

	<div class="container">
		 {% include "partials/intro.twig" %}
	</div>	
	<section class="section__our-company post-type-{{post.post_type}}" id="post-{{post.ID}}">
		{% include "partials/about.twig" %}
	</section>
	<section class="section__staff-grid">
		<h2 class="intro__statement">A Tradition of Personal &amp; Corporate Integrity.<br>Our Success Stems from Our People.</h2>
		<div class="container">
			<h2 class="section__headline">Who We Are</h2>
			{% include "partials/staff-grid.twig" %}
		</div>	
	</section>
	<section class="section__staff">
		<div class="container">
			{% include "partials/staff-modals.twig" %}
		</div>
	</section>	
	<section class="section__header">
		<div class="container">	
			<h1 class="header__title">Properties</h1>			
		</div>	
	</section>
	<section class="section__property-types">
		{% include "partials/property-types.twig" %}
	</section>
	<section class="section__properties content-margins">
		<div class="container">		
			{% include "partials/properties.twig" %}
		</div>
	</section>

<div class="container-fluid">
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
		<strong>Holy guacamole!</strong> You should check in on some of those fields below.
	</div>
</div>
<!--<script>$(".alert").alert('close');</script>-->



{% endblock %}