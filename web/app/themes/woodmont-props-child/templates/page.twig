{% extends "base.twig" %}

{% block content %}
	<section class="section__slideshow">
		{% include "partials/slideshow.twig" %}
	</section>
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<div class="content-margins">
			<section class="article-content">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body">
					{{post.content}}
				</div>
			</section>
			<section class="section__staff-grid row group" style="clear:both;margin-bottom:100px">
				<div class="col span_1_of_8"></div>
				<div class="col span_6_of_8">
				<h2 class="section__headline">Who We Are</h2>
					{% include "partials/staff-grid.twig" %}
				</div>	
				<div class="col span_1_of_8"></div>
			</section>
		</div>
		<section class="section__staff row group" style="clear:both;margin-bottom:100px">
			<div class="col span_1_of_8"></div>
			<div class="col span_6_of_8">
			{% include "partials/staff.twig" %}
			</div>
			<div class="col span_1_of_8"></div>
		</section>
		<div class="content-margins">	
			<section class="section__properties" style="clear:both;margin-bottom:100px">
				<h2 class="section__headline">Properties</h2>
				{% include "partials/properties.twig" %}
			</section>
		</div>
		</article>
{% endblock %}