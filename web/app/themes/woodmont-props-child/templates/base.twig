{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">

		{% include "partials/navbar.twig" %}

		<section id="content" role="main">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<div class="wrapper {{sidebar_class}}">
				{% block content %}
					Sorry, no content
				{% endblock %}
			</div>
		</section>

		{% block footer %}
			<footer id="footer" class="footer">
				{% include 'partials/footer.twig' %}
			</footer>
			<script src="{{theme.path}}/assets/js/vendors.min.js"></script>
			<script src="{{theme.path}}/assets/js/custom.js"></script><!-- Minified Bootstrap JavaScript files in custom.js -->
		<script>
			$(function(){
				var current_panel = 0
				$("a.portfolio__next-button").click(function(){
					$(".thumb"+current_panel+" .portfolio-thumbnail__text").click()
					if(current_panel < $(".panel").length-1) {
						current_panel +=1
					} else {
						current_panel = 0
					}
				})
			});
		</script>
		{{ function('wp_footer') }}
		{% endblock %}

	</body>
</html>
