{% extends "base.twig" %}

{% block content %}


	<section class="section__slideshow">
		{% include "partials/slideshow.twig" %}
	</section>
	<div class="container">
		 {% include "partials/intro.twig" %}
	</div>	
	<section class="section__our-company post-type-{{post.post_type}}" id="post-{{post.ID}}">
		{% include "partials/about.twig" %}
	</section>
	<section class="section__staff-grid">
		<h2 class="intro__statement">A Tradition of Personal &amp; Corporate Integrity.<br>Our Success Stems from Our People.</h2>
		<div class="container">
			<h2 class="section__headline">Who We Are</h2>
			{% include "partials/staff-grid.twig" %}
		</div>	
	</section>	
	<section class="section__header" style="background-image:url('{{theme.path}}/assets/img/header-image_properties.jpg')">
		<div class="container-fluid">	
			<h1 class="header__title">Properties</h1>			
		</div>
	</section>
	<section class="section__property-types">
		{% include "partials/property-types.twig" %}
	</section>
	<section class="section__portfolio">
		<div class="container">	
			{% include "partials/portfolio.twig" %}
		</div>
	</section>
	<section class="section__awards">		
			{% include "partials/awards.twig" %}
	</section>
	<section class="section__contact">		
			{% include "partials/contact.twig" %}
	</section>

{% endblock %}