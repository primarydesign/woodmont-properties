	<h3 class="intro__statement">Throughout our history, Woodmont Properties has developed and invested in a diverse mix of real estate throughout New Jersey, New York and Pennsylvania. Today, our extensive portfolio comprises world-class residential, commercial and mixed-use properties.</h3>
	<h2 class="section__headline">Our Portfolio</h2>
	<ul class="portfolio__type-toggles row" role="group">
			<li class="portfolio__type portfolio__type--dropdown col-lg-3 col-6">
				<span class="portfolio__type-label" id="btnGroupApartments" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" role="group">Luxury Apartments</span>
				<div class="dropdown-menu" aria-labelledby="btnGroupApartments">
					<a class="dropdown-item" href="">View All</a>
					<a class="dropdown-item" href="#">Now Leasing</a>
					<a class="dropdown-item" href="#">Coming Soon</a>
					<a class="dropdown-item" href="#">Past Accomplishments</a>
				</div>
			</li>
			<li class="portfolio__type col-lg-3 col-6">
				<span class="portfolio__type-label">Luxury Homes</span>
			</li>
			<li class="portfolio__type col-lg-3 col-6">
				<span class="portfolio__type-label">Industrial</span>
			</li>
			<li class="portfolio__type portfolio__type--dropdown col-lg-3 col-6">
				<span class="portfolio__type-label" id="btnGroupOffice" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Office/Retail</span>
				<div class="dropdown-menu" aria-labelledby="btnGroupOffice">
					<a class="dropdown-item" href="">View All</a>
					<a class="dropdown-item" href="#">Now Leasing</a>
					<a class="dropdown-item" href="#">Coming Soon</a>
					<a class="dropdown-item" href="#">Past Accomplishments</a>
				</div>
			</li>
	</ul>
	<section id="portfolio__grid">

		{% for property in properties %}

		<div id="panel" class="panel">
			<article class="property--selected collapse" id="{{ property.title|replace({'.': "", ' ': "", ',': ""}) }}" role="tabpanel" aria-labelledby="{{ property.title|replace({'.': "", ' ': "", ',': ""}) }}">
					<img class="property__featured-img" src="{{ property.thumbnail }}" width="600">
					<span class="property__status">{{ property.current_status }}</span>
					<ul class="property__specs">
						<a class="portfolio__next-button"> > </a>
						<li><h3 class="property__name">{{ property.title }}</h3></li>
						<li class="property__address">{% if property.street_address %}{{property.street_address}}, {% endif %}{{ property.city_state }}</li>
						<li class="property__details">{% if property.details %}{{ property.details }}{% endif %}</li>
						<li>
							{% if property.website %}
								<a class="property__website" href="http://{{ property.website }}">Visit Website</a>
							{% endif %}
							{% if property.phone_number %}
								<a class="property__phone" href="tel:{{ property.phone_number }}">{{ property.phone_number }}</a>
							{% endif %}
						</li>
						<li><span class="property__description">{{ property.content }}</span></li>
					</ul>
			</article>
		</div>
		{% endfor %}
		<ul class="portfolio__thumbnails row">
			{% for counter, thumbmails in properties %}
				<li class="portfolio__thumbnail thumb{{counter+1}} col-lg-3 col-md-4 col-6" style="background-image:url({{ thumbmails.thumbnail.src }})" data-toggle="collapse" data-target="#{{ thumbmails.post_title|replace({'.': "", ' ': "", ',': ""}) }}" aria-expanded="false" aria-controls="collapseExample" data-parent="#portfolio__grid">
					<div class="portfolio-thumbnail__text {{ thumbmails.current_status|replace({'.': "", ' ': "", ',': ""}) }}">
						<span class="portfolio-thumbnail__name">{{ thumbmails.title }}</span>
						<span class="portfolio-thumbnail__place">{{ thumbmails.city_state }}</span>
					</div>
				</li>
			{% endfor %}
		</ul>
	</section>
